@using JobsBoard.Areas.Identity.Data
@model JobsBoardUser




@{
    ViewData["Title"] = "الملف الشخصي";

}



<div class="page-profile">

    <div class="container-fluid--max-w container-fluid">
        <div class="Header-Details d-flex justify-content-center ">

            <div style="position: relative;">

                <img src="~/Images/myphoto.png" class="profile__avatar uavatar--large profile__avatar--header img--circle" width="128" height="128">

                <img class="profile-verification-badge" src="https://baaeed.hsoubcdn.com/public/images/verification-badge.svg?id=b62fe2ab1b488ff682d83adb331dc242" data-toggle="tooltip" title="" data-original-title="هوية موثقة">



            </div>

        </div>
        <div class="d-flex justify-content-center">
            <h1 class="header-title"><span dir="rtl">@Model.UserName</span></h1>
        </div>

        <div class="header-meta d-flex justify-content-center">
            <ul class="text-secondary">
                <li class="list-inline-item">
                    <a class="text-decoration-none text-reset " href="https://baaeed.com/talents/%D9%85%D8%A8%D8%B1%D9%85%D8%AC-%D9%85%D9%88%D8%A7%D9%82%D8%B9">
                        <i class="bi bi-briefcase-fill"></i>
                        مبرمج مواقع
                    </a>
                </li>

                <li class="list-inline-item">
                    <i class="bi bi-geo-alt-fill"></i>
                    <span>اليمن</span>
                </li>
            </ul>
        </div>
        <div class="Footer-Details">
            <div class="Footer-action d-flex justify-content-end ">

                <buttton class="btn btn-primary rounded-0">
                    تعديل
                </buttton>
                <button class="btn btn-primary dropdown-toggle page-header__dropdown-toggle rounded-0" type="button" id="dropdown-menu-button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></button>
            </div>
        </div>
    </div>
</div>
